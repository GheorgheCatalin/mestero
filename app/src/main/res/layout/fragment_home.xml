<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluishWhite"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/app_title_logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/title_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/main_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Welcome, user"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@color/main_text_color2"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_title_logo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_services_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/main_text_color"
                    android:textColorHint="@color/main_text_color2"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/search_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/search_txt"
                    android:focusable="true"
                    android:padding="14dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/main_text_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/open_conversations_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_message"
            app:layout_constraintTop_toTopOf="@id/app_title_logo"
            app:layout_constraintBottom_toBottomOf="@id/app_title_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/main_text_color" />

        <!-- My Listings Section - PROVIDER only -->
        <TextView
            android:id="@+id/my_posts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/my_listings_title"
            android:textColor="@color/main_text_color2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_card" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/my_posts_label" />

        <TextView
            android:id="@+id/my_posts_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/empty_state_background"
            android:padding="16dp"
            android:text="You haven't posted anything yet"
            android:textColor="@color/gray1"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_posts_recycler_view" />

        <!-- Divider after My Listings section -->
        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/my_posts_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/my_posts_label"
            app:layout_constraintTop_toTopOf="@id/my_posts_label" />

        <!-- Barrier to handle positioning after my posts section -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/my_posts_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="my_posts_recycler_view,my_posts_empty_state" />

        <!-- New Posts Section -->
        <TextView
            android:id="@+id/new_posts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
                                android:text="@string/new_posts_title"
            android:textColor="@color/main_text_color2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_posts_barrier" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/new_posts_label" />

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray1"
            app:layout_constraintBottom_toBottomOf="@id/new_posts_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/new_posts_label"
            app:layout_constraintTop_toTopOf="@id/new_posts_label" />

        <TextView
            android:id="@+id/new_posts_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/empty_state_background"
            android:padding="16dp"
            android:text="No new posts available"
            android:textColor="@color/gray1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_posts_recycler_view" />

        <!-- Barrier to handle positioning after new posts section -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/new_posts_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="new_posts_recycler_view,new_posts_empty_state" />

        <!-- Categories Section (CLIENT default visible) -->
        <TextView
            android:id="@+id/categories_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Categories"
            android:textColor="@color/main_text_color2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_posts_barrier" />

        <TextView
            android:id="@+id/see_all_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="See All"
            android:textColor="@color/main_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/categories_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/categories_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingVertical="8dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/categories_label" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray1"
            app:layout_constraintBottom_toBottomOf="@id/categories_label"
            app:layout_constraintEnd_toStartOf="@id/see_all_categories"
            app:layout_constraintStart_toEndOf="@id/categories_label"
            app:layout_constraintTop_toTopOf="@id/categories_label" />

        <!-- Barrier for categories section -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/categories_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="categories_recycler_view,categories_label" />

        <!-- Most Viewed Section - client only -->
        <TextView
            android:id="@+id/last_seen_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
                                android:text="@string/most_popular_title"
            android:textColor="@color/main_text_color2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories_barrier" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/last_seen_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/last_seen_label" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray1"
            app:layout_constraintBottom_toBottomOf="@id/last_seen_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/last_seen_label"
            app:layout_constraintTop_toTopOf="@id/last_seen_label" />

        <TextView
            android:id="@+id/last_seen_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/empty_state_background"
            android:padding="16dp"
            android:text="No popular services yet"
            android:textColor="@color/gray1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/last_seen_recycler_view" />



        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:visibility="visible"
            android:indeterminateTint="@color/gray1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>